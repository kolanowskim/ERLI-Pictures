{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./src",
    "module": "esnext",
    "target": "ES2022",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
